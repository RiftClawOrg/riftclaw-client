{
  "name": "riftclaw-client",
  "version": "1.0.0",
  "description": "RiftClaw Traveler - Electron client for RiftClaw metaverse",
  "main": "./src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "riftclaw",
    "metaverse",
    "electron",
    "threejs",
    "gaming"
  ],
  "author": "RiftClaw Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.16.0",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.riftclaw.client",
    "productName": "RiftClaw Traveler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
